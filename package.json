{
  "name": "auto-clicker",
  "version": "1.0.1",
  "description": "Windows用自動クリックツール - ゲーム自動化向け",
  "main": "dist/main/main/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "concurrently \"npm run watch:main\" \"npm run watch:renderer\" \"wait-on dist/main/main.js && electron .\"",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "tsc -p tsconfig.renderer.json && copyfiles -u 1 \"src/renderer/*.html\" \"src/renderer/*.css\" dist/renderer/",
    "watch:main": "tsc -p tsconfig.main.json --watch",
    "watch:renderer": "tsc -p tsconfig.renderer.json --watch",
    "package": "npm run build && electron-builder --win",
    "publish": "npm run build && electron-builder --publish always"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.3.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "koffi": "^2.8.0"
  },
  "build": {
    "appId": "com.autoclicker.app",
    "productName": "Auto Clicker",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "win": {
        "target": "nsis",
        "publish": [
          "github"
        ]
      },
      "icon": "assets/icon.ico"
    },
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/"
      }
    ]
  }
